<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_item"
        android:layout_centerInParent="true"
        android:id="@+id/itemCategories_rlItem"
        android:layout_margin="@dimen/dimens_5dp"
        android:gravity="center">
        <TextView
            android:layout_width="@dimen/dimens_110dp"
            android:layout_height="@dimen/dimens_70dp"
            android:id="@+id/itemCategories_tvTitle"
            android:gravity="center"
            android:textSize="@dimen/dimens_14sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </RelativeLayout>

</RelativeLayout>